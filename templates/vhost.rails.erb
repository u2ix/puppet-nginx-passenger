server {

      charset utf-8;
      listen <%= @port %>;
      server_name <%= @host %>;
      root <%= @root %>/public;

      passenger_enabled on;
      passenger_base_uri /;

      access_log <%= scope['nginx_passenger::logdir'] %>/<%= @name %>_access.log;
      error_log  <%= scope['nginx_passenger::logdir'] %>/<%= @name %>_error.log;

}
